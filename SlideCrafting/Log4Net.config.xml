  <!-- boring ConsoleAppender -->
  <appender name="consoleAppender" type="log4net.Appender.ConsoleAppender">

    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%d{yyyy-MM-dd HH:mm:ss} %-5level %logger|%message%newline" />
    </layout>
  </appender>

  <appender name="rfAppender" type="log4net.Appender.RollingFileAppender">
    <file value="slideCrafting.log" />
    <appendToFile value="true" />
    <maximumFileSize value="100KB" />
    <maxSizeRollBackups value="2" />

    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%d{yyyy-MM-dd HH:mm:ss} %-5level %thread %logger|%message%newline" />
    </layout>
  </appender>

  <!-- Set root logger level to DEBUG and its only appender to A1 -->
  <root>
    <level value="TRACE" />
    <appender-ref ref="consoleAppender" />
    <appender-ref ref="rfAppender" />
  </root>
</log4net>