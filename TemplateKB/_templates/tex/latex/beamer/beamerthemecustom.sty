%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%
%%	Color theme / Font theme
%%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\definecolor{my-blue}{RGB}{0, 111, 156}

\definecolor{my-white}{RGB}{255, 255, 255}
\definecolor{my-black}{RGB}{0, 0, 0}

% This sets the colour and font of the title of the slides
\setbeamercolor{frametitle}{fg = my-black}
\setbeamerfont{frametitle}{size = \Large}
\setbeamertemplate{frametitle}{
	\vspace*{10mm}
	\hspace*{-2mm}
	\insertframetitle
}

\setbeamercolor{Title}{fg = my-blue}
\setbeamerfont{Title}{size = \huge}

% In case you choose to display the Table of Contents, or the Outline slide.
\setbeamercolor{section in toc}{fg = my-blue}
\setbeamercolor{section in toc shaded}{fg = my-blue}

% The colour of all the items, subitems and and subsubitems are set to black.
\setbeamercolor{item}{fg = my-blue}
\setbeamercolor{subitem}{fg = my-blue}
\setbeamercolor{subsubitem}{fg = my-blue}

% This sets the color for each item heading of the description environment.
\setbeamercolor{description item}{fg = my-blue}

% We also need to fix the colours for captions for figures and tables.
\setbeamercolor{caption}{fg = my-blue}
\setbeamercolor{caption name}{fg = my-blue}

%Standard block
\setbeamercolor{block title}{fg = my-blue, bg = my-blue!15!white}
\setbeamercolor{block body}{bg = my-blue!5!white}

% Alert block
\setbeamercolor{block title alerted}{fg = my-blue, bg = my-blue!50!white}
\setbeamercolor{block body alerted}{bg = my-blue!5!white}

% Example block
\setbeamercolor{block title example}{fg = my-blue, bg = my-blue!15!white}
\setbeamercolor{block body example}{bg = my-blue!5!white}

% Color of basic text
\setbeamercolor{normal text}{fg = my-black}
\usefonttheme{professionalfonts}

\hypersetup{colorlinks,urlcolor=blue}
\setbeamercolor{button}{fg = my-blue}

\setbeamertemplate{navigation symbols}{
	\insertslidenavigationsymbol
	\insertframenavigationsymbol
	\insertsubsectionnavigationsymbol
	\insertsectionnavigationsymbol
	\insertdocnavigationsymbol
	\insertbackfindforwardnavigationsymbol
}


%%%%%%%%%%%%%%
%%
%%	Inner theme
%%
%%%%%%%%%%%%%%
\useinnertheme{rounded}
\setbeamercovered{transparent = 28}
\defbeamertemplate{itemize subitem}{minus}{\textbf{-}}
\defbeamertemplate{itemize subsubitem}{bullet}{$\bullet$}

% Instead of rounded circles, we will use triangles as the indicator for items.
\setbeamertemplate{itemize item}[square]
\setbeamertemplate{itemize subitem}[minus]
\setbeamertemplate{itemize subsubitem}[bullet]

% The default option for enumerate environment removes the circles around the numbers provided by the "rounded" inner theme. Just simple numbers remain.
\setbeamertemplate{enumerate items}[square]
\setbeamertemplate{enumerate item}[square]

%in case you want to have an 1.2.3 numbering style use the template below
%\setbeamertemplate{enumerate subitem}{\insertenumlabel.\insertsubenumlabel}
\setbeamertemplate{enumerate subitem}[square]
\setbeamertemplate{enumerate subsubitem}[square]
\setbeamertemplate{sections/subsections in toc}[square]

%%%%%%%%%%%%%%
%%
%%	Outer theme
%%
%%%%%%%%%%%%%%

\setbeamertemplate{footline}{%

	\usebeamerfont{structure}
	\begin{beamercolorbox}[wd=\paperwidth,ht=2.25ex,dp=1ex]{title in head/foot}%
		\Tiny\hspace*{4mm} 
		Test Company\ -\ \inserttitle
		\ifx\insertsection\empty\else:\ \insertsection\fi%
		\ifx\insertsubsection\empty\else\ -\ \insertsubsection\fi
		\hfill
		\insertauthor % The center
		\hfill
		.
		\hspace{4mm}
	\end{beamercolorbox}%

}


\setbeamertemplate{title page}{

	\vspace{80pt}
	
	\begin{beamercolorbox}[wd=\paperwidth, ht=0.06\paperwidth]{Title}%
		\centering \huge \inserttitle
	\end{beamercolorbox}
	\vspace{1pt}
	
	\begin{beamercolorbox}[wd=\paperwidth, ht=0.06\paperwidth]{Title}%
	 	\centering \small \textit{\insertsubtitle}%
	\end{beamercolorbox}
	\vspace{30pt}
	
	\begin{beamercolorbox}[wd=\paperwidth, ht=0.06\paperwidth]{Title}%
		\hfill
		\small 
		\textcolor{my-black}{
			\insertauthor
		} 
		\hspace{4mm}
	\end{beamercolorbox}
	\vspace{-20pt}
	
	\begin{beamercolorbox}[wd=\paperwidth, ht=0.06\paperwidth]{Title}%
		\hfill 
		\tiny 
		\textcolor{my-black}{
			\textit{\insertinstitute}
		}%
		\hspace{4mm}
	\end{beamercolorbox}
	\vspace{-20pt}
	
	\begin{beamercolorbox}[wd=\paperwidth, ht=0.06\paperwidth]{Title}%
		\hfill 
		\tiny 
		\textcolor{my-black}{
			\textit{\insertdate}
		}%
		\hspace{4mm}
	\end{beamercolorbox}
}

